{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "lib": ["esnext", "dom"],
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noPropertyAccessFromIndexSignature": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "build",
        "target": "esnext",
        "jsx": "react",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
